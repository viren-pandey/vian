
# ── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://user:password@localhost:5432/vian"

# ── Auth ──────────────────────────────────────────────────────────────────────
JWT_SECRET="change-me-to-a-long-random-string"
JWT_EXPIRES_IN="7d"

# ── LLM API Keys ──────────────────────────────────────────────────────────────
# Rotate multiple Groq keys for free-tier (add as many as needed)
GROQ_API_KEY_1=""
GROQ_API_KEY_2=""
GROQ_API_KEY_3=""
GROQ_API_KEY_4=""
GROQ_API_KEY_5=""

# Alternative: Single Groq key (if not rotating)
# GROQ_API_KEY=""

# Other LLM providers
GEMINI_API_KEY=""
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
DEEPSEEK_API_KEY=""

# ── OpenCode Configuration ────────────────────────────────────────────────────
# Silent AI code auditor and fixer (requires: npm i -g opencode-ai)
OPENCODE_PROVIDER="anthropic"
OPENCODE_MODEL="claude-sonnet-4-6"
OPENCODE_TIMEOUT="60000"
OPENCODE_SILENT="true"
OPENCODE_AUTO_AUDIT="true"

# ── App ───────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL="http://localhost:4000"
PORT=4000
NODE_ENV="development"
